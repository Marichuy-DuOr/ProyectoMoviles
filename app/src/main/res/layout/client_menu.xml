    <androidx.cardview.widget.CardView
        android:id="@+id/opcion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_opcion1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/muffin"/>

            <TextView
                android:id="@+id/name_opcion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/img_opcion1"
                android:text="Productos"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/desc_opcion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_opcion1"
                android:layout_toRightOf="@+id/img_opcion1"
                android:text="Ir de compras" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/opcion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_opcion2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/carrito"/>

            <TextView
                android:id="@+id/name_opcion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/img_opcion2"
                android:text="Carrito"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/desc_opcion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_opcion2"
                android:layout_toRightOf="@+id/img_opcion2"
                android:text="Ver mi carrito" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>